<header class="header menu_2">
	<div id="preloader"><div data-loader="circle-side"></div></div>
	<div id="logo">
		<a href="#"><img src="{{asset('bundles/app/frontend/img/logo.png')}}" width="50" height="40" data-retina="true" alt=""></a>
	</div>
	<ul id="top_menu">
		{% if app.user is null %}
			<li><a href="{{ path('fos_user_security_login') }}" class="login">Login</a></li>
		{% endif %}
		<li><a href="#" class="search-overlay-menu-btn">Busca</a></li>
		<li class="hidden_tablet"><a href="#" class="btn_1 rounded">Saiba mais</a></li>
	</ul>
	<a href="#menu" class="btn_mobile">
		<div class="hamburger hamburger--spin" id="hamburger">
			<div class="hamburger-box">
				<div class="hamburger-inner"></div>
			</div>
		</div>
	</a>
	<nav id="menu" class="main-menu">
		<ul>
			<li><span><a href="{{ path('homepage') }}">Página inicial</a></span></li>
			<li><span><a href="{{ path('driver') }}">Motoristas</a></span></li>
			<li><span><a href="#">Ajuda</a></span></li>
			{% if app.user is null %}
				<li><span><a href="#">Faça parte</a></span>
					<ul>
						<li><a href="#">Tenho van</a></li>
						<li><a href="#">Tenho carro</a></li>
					</ul>
				</li>
			{% endif %}
			{% if app.user != null %}
				<li><span><a href="#">Meu perfil</a></span>
					<ul>
						{% if is_granted("ROLE_SUPER_ADMIN") %}
							<li><a href="{{ path('backend_home') }}"><img src="{% if app.user.photo == null %} {{asset('bundles/app/frontend/img/user.jpg')}} {% else %} {{asset("uploads/user/photo/"~app.user.photo)}} {% endif %}" width="20" height="20" data-retina="true" alt="">&nbsp;Administrar</a></li>
						{% else %}
							<li><a href="{{ path('dashboard_index') }}"><img src="{% if app.user.photo == null %} {{asset('bundles/app/frontend/img/user.jpg')}} {% else %} {{asset("uploads/user/photo/"~app.user.photo)}} {% endif %}" width="20" height="20" data-retina="true" alt="">&nbsp;Painel</a></li>
						{% endif %}
						<li><a href="{{ path('user_logout') }}">Sair</a></li>
					</ul>
				</li>
			{% endif %}
		</ul>
	</nav>
	<div class="search-overlay-menu">
		<span class="search-overlay-close"><span class="closebt"><i class="ti-close"></i></span></span>
		<form role="search" action='{{ path('search') }}' id="searchform" method="get">
			<input value="" name="query" type="search" placeholder="Busque..." />
			<button type="submit"><i class="icon_search"></i>
			</button>
		</form>
	</div>
</header>
{% extends '::Backend/base.html.twig' %}

{% block body %}
<main class="main-content p-5" role="main">
    <div class="row">
        <div class="col-md-12">
            <h1>Anúncios</h1>
        </div>
    </div>
    <div class="row mb-5">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12 pb-5">
                            <h2>Listagem de anúncios</h2>
                            <div class="table-responsive">
                                <table id="datatableAdmin" class="table table-datatable table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Nome do motorista</th>
                                            <th>Nome</th>
                                            <th>Preço</th>
                                            <th>Status</th>
                                            <th>Ações</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for entity in entities %}
                                            <tr class="list-clients">
                                                <td>{{ entity.id }}</td>
                                                <td>{{ entity.driver.fullName }}</td>
                                                <td>{{ entity.name }}</td>
                                                <td>{{ entity.price }}</td>
                                                <td>
                                                    {% if entity.active %}
                                                      Ativo
                                                    {% else %}
                                                        Não ativo
                                                    {% endif %}
                                                </td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        <button id="btnGroupVerticalDrop2" type="button" class="btn btn-secondary dropdown-toggle waves-effect waves-light" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                                            Veja as opções
                                                        </button>
                                                        <div class="dropdown-menu" aria-labelledby="btnGroupVerticalDrop2" x-placement="bottom-start" style="position: absolute; transform: translate3d(0px, 39px, 0px); top: 0px; left: 0px; will-change: transform;">
                                                            <a class="dropdown-item" target="_blank" href="{{ path('ad_show',{'slug': entity.slug}) }}">Ver</a>
                                                            {% if entity.active %}
                                                              <a href="{{ path('backend_ads_status', { 'id': entity.id }) }}" class="dropdown-item">Desabilitar</a>
                                                            {% else %}
                                                                <a href="{{ path('backend_ads_status', { 'id': entity.id }) }}" class="dropdown-item">Habilitar</a>
                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
{% endblock %}
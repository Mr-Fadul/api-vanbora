<div class="box-body">
    <div class="form-group">
        {{ form_errors(form.name) }}
        <label for="category_name">Nome</label>
        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        <label for="course_description">Descrição</label>
        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'maxlength': "1200"}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.photo) }}
        {{ form_errors(form.photoTemp) }}
        {{ form_row(form.photoTemp, {'attr': {'class': 'form-control'}}) }}
        {% if entity.photo != null %}
            <a href="{{ asset('uploads/category/photo/' ~ entity.photo) }}">{{ entity.photo }}</a>
        {% endif %}
    </div>
</div><!-- /.box-body -->

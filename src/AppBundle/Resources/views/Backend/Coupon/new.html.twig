{% extends '::Backend/base.html.twig' %}

{% block body %}
    <main class="main-content p-5" role="main">
        <div class="row">
            <div class="col-md-12">
                <h1>Cadastro</h1>
            </div>
        </div>
        <div class="row mb-5">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <form role="form"  action="{{ path('backend_coupon_new') }}" method="post" {{ form_enctype(form) }}>
                                    {{ form_widget(form._token) }}

                                    {% block messages %}
                                        {{ parent() }}
                                        {{ form_errors(form) }}
                                    {% endblock %}

                                    {% include 'AppBundle:Backend/Coupon:form.html.twig' with {'form': form} %}
                                    <div class="form-group">
                                        <div class="col-md-8 col-md-offset-4">
                                            <button type="submit" class="btn btn-secondary waves-effect waves-light">
                                                Cadastrar
                                            </button>
                                            <a class="btn btn-light waves-effect waves-light" href="{{ path('backend_coupon') }}">
                                                Cancelar
                                            </a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('bundles/app/js/vendor/moment-with-locales.js')}}"></script>
    <script src="{{asset('bundles/app/js/vendor/bootstrap-datetimepicker/bootstrap-datetimepicker.js')}}"></script>
    <script src="https://cdn.jsdelivr.net/npm/gijgo@1.9.10/js/gijgo.min.js" type="text/javascript"></script>
    <script src="{{asset('bundles/app/js/custom/admin/script.js')}}"></script>
    {% javascripts filter='?uglifyjs2'
        '@AppBundle/Resources/public/js/custom/Coupon/form.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}